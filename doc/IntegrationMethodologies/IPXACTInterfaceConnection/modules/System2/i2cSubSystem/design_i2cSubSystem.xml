<spirit:design xmlns:spirit="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009 http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009/index.xsd">
  <spirit:vendor>spiritconsortium.org</spirit:vendor>
  <spirit:library>Leon2RTL</spirit:library>
  <spirit:name>design_i2cSubSystem</spirit:name>
  <spirit:version>2.0</spirit:version>
  <spirit:componentInstances>
    <spirit:componentInstance>
      <spirit:instanceName>i_i2c</spirit:instanceName>
      <spirit:componentRef spirit:vendor="spiritconsortium.org" spirit:library="Leon2RTL" spirit:name="i2c" spirit:version="1.0"/>
      <spirit:configurableElementValues>
        <spirit:configurableElementValue spirit:referenceId="ClockPeriod">8</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ClockPulseDuration">4</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ClockPulseOffset">4</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ClockPulseValue">1</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ipClockPeriod">1000</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ipClockPulseDuration">500</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ipClockPulseOffset">500</spirit:configurableElementValue>
        <spirit:configurableElementValue spirit:referenceId="ipClockPulseValue">1</spirit:configurableElementValue>
      </spirit:configurableElementValues>
    </spirit:componentInstance>
    <spirit:componentInstance>
      <spirit:instanceName>i_i2c_io</spirit:instanceName>
      <spirit:componentRef spirit:vendor="spiritconsortium.org" spirit:library="Leon2RTL" spirit:name="i2c_io" spirit:version="1.0"/>
    </spirit:componentInstance>
  </spirit:componentInstances>
  <spirit:interconnections>
    <spirit:interconnection>
      <spirit:name>defaultid4489761</spirit:name>
      <spirit:activeInterface spirit:componentRef="i_i2c_io" spirit:busRef="i2c_internal"/>
      <spirit:activeInterface spirit:componentRef="i_i2c" spirit:busRef="i2c_internal"/>
    </spirit:interconnection>
  </spirit:interconnections>
  <spirit:adHocConnections>
    <spirit:adHocConnection>
      <spirit:name>i_i2c_ip_clk</spirit:name>
      <spirit:internalPortReference spirit:componentRef="i_i2c" spirit:portRef="ip_clk"/>
      <spirit:externalPortReference spirit:portRef="i_i2c_ip_clk"/>
    </spirit:adHocConnection>
    <spirit:adHocConnection>
      <spirit:name>i_i2c_rst_an</spirit:name>
      <spirit:internalPortReference spirit:componentRef="i_i2c" spirit:portRef="rst_an"/>
      <spirit:externalPortReference spirit:portRef="i_i2c_rst_an"/>
    </spirit:adHocConnection>
    <spirit:adHocConnection spirit:tiedValue="0">
      <spirit:name>logic_zero</spirit:name>
      <spirit:internalPortReference spirit:componentRef="i_i2c_io" spirit:portRef="scl_out"/>
      <spirit:internalPortReference spirit:componentRef="i_i2c_io" spirit:portRef="sda_out"/>
    </spirit:adHocConnection>
  </spirit:adHocConnections>
  <spirit:hierConnections>
    <spirit:hierConnection spirit:interfaceRef="i2c_interrupt">
      <spirit:interface spirit:componentRef="i_i2c" spirit:busRef="interrupt"/>
    </spirit:hierConnection>
    <spirit:hierConnection spirit:interfaceRef="i2c">
      <spirit:interface spirit:componentRef="i_i2c_io" spirit:busRef="i2c"/>
    </spirit:hierConnection>
    <spirit:hierConnection spirit:interfaceRef="i2c_ambaAPB">
      <spirit:interface spirit:componentRef="i_i2c" spirit:busRef="ambaAPB"/>
    </spirit:hierConnection>
  </spirit:hierConnections>
</spirit:design>
