<spirit:component xmlns:spirit="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009 http://www.spiritconsortium.org/XMLSchema/SPIRIT/1685-2009/index.xsd">
  <spirit:vendor>spiritconsortium.org</spirit:vendor>
  <spirit:library>Leon2RTL</spirit:library>
  <spirit:name>i2c_memory</spirit:name>
  <spirit:version>1.0</spirit:version>
  <spirit:busInterfaces>
    <spirit:busInterface>
      <spirit:name>i2c_slave</spirit:name>
      <spirit:busType spirit:vendor="spiritconsortium.org" spirit:library="busdef.nxp" spirit:name="i2c" spirit:version="1.0"/>
      <spirit:abstractionType spirit:vendor="spiritconsortium.org" spirit:library="busdef.nxp" spirit:name="i2c_rtl" spirit:version="1.0"/>
      <spirit:slave>
        <spirit:memoryMapRef spirit:memoryMapRef="memory"/>
      </spirit:slave>
      <spirit:portMaps>
        <spirit:portMap>
          <spirit:logicalPort>
            <spirit:name>SCL</spirit:name>
          </spirit:logicalPort>
          <spirit:physicalPort>
            <spirit:name>scl</spirit:name>
          </spirit:physicalPort>
        </spirit:portMap>
        <spirit:portMap>
          <spirit:logicalPort>
            <spirit:name>SDA</spirit:name>
          </spirit:logicalPort>
          <spirit:physicalPort>
            <spirit:name>sda</spirit:name>
          </spirit:physicalPort>
        </spirit:portMap>
      </spirit:portMaps>
    </spirit:busInterface>
  </spirit:busInterfaces>
  <spirit:memoryMaps>
    <spirit:memoryMap>
      <spirit:name>memory</spirit:name>
      <spirit:addressBlock>
        <spirit:name>memory</spirit:name>
        <spirit:baseAddress>0</spirit:baseAddress>
        <spirit:range spirit:id="AB_range" spirit:resolve="dependent" spirit:dependency="id('range')">4096</spirit:range>
        <spirit:width>8</spirit:width>
        <spirit:usage>memory</spirit:usage>
        <spirit:access>read-write</spirit:access>
      </spirit:addressBlock>
    </spirit:memoryMap>
  </spirit:memoryMaps>
  <spirit:model>
    <spirit:views>
      <spirit:view>
        <spirit:name>verilogSource</spirit:name>
        <spirit:envIdentifier>:modelsim.mentor.com:</spirit:envIdentifier>
        <spirit:envIdentifier>:vcs.synopsys.com:</spirit:envIdentifier>
        <spirit:envIdentifier>:designcompiler.synopsys.com:</spirit:envIdentifier>
        <spirit:language>verilog</spirit:language>
        <spirit:modelName>i2c_memory</spirit:modelName>
        <spirit:fileSetRef>
          <spirit:localName>fs-verilogSource</spirit:localName>
        </spirit:fileSetRef>
      </spirit:view>
      <spirit:view>
        <spirit:name>vhdlSource</spirit:name>
        <spirit:envIdentifier>:ncsim.cadence.com:</spirit:envIdentifier>
        <spirit:language>vhdl</spirit:language>
        <spirit:modelName>i2c_memory</spirit:modelName>
        <spirit:fileSetRef>
          <spirit:localName>fs-verilogSource</spirit:localName>
        </spirit:fileSetRef>
        <spirit:fileSetRef>
          <spirit:localName>fs-vhdlWrapper</spirit:localName>
        </spirit:fileSetRef>
      </spirit:view>
    </spirit:views>
    <spirit:ports>
      <spirit:port>
        <spirit:name>scl</spirit:name>
        <spirit:wire>
          <spirit:direction>in</spirit:direction>
        </spirit:wire>
      </spirit:port>
      <spirit:port>
        <spirit:name>sda</spirit:name>
        <spirit:wire>
          <spirit:direction>inout</spirit:direction>
        </spirit:wire>
      </spirit:port>
      <spirit:port>
        <spirit:name>address</spirit:name>
        <spirit:wire>
          <spirit:direction>in</spirit:direction>
          <spirit:vector>
            <spirit:left>9</spirit:left>
            <spirit:right>0</spirit:right>
          </spirit:vector>
        </spirit:wire>
      </spirit:port>
    </spirit:ports>
    <spirit:modelParameters>
      <spirit:modelParameter spirit:dataType="integer">
        <spirit:name>MEM_DEPTH</spirit:name>
        <spirit:value spirit:resolve="user" spirit:id="range" spirit:prompt="Depth of memory:">4096</spirit:value>
      </spirit:modelParameter>
      <spirit:modelParameter spirit:dataType="integer">
        <spirit:name>ADDRESS_BYTES</spirit:name>
        <spirit:value spirit:resolve="user" spirit:id="bytes" spirit:prompt="Number of address bytes in the I2C packet:">2</spirit:value>
      </spirit:modelParameter>
    </spirit:modelParameters>
  </spirit:model>
  <spirit:fileSets>
    <spirit:fileSet>
      <spirit:name>fs-verilogSource</spirit:name>
      <spirit:file>
        <spirit:name>data/i2c_memory/RTL/i2c_memory.v</spirit:name>
        <spirit:fileType>verilogSource</spirit:fileType>
        <spirit:logicalName>i2c_memory_lib</spirit:logicalName>
      </spirit:file>
    </spirit:fileSet>
    <spirit:fileSet>
      <spirit:name>fs-vhdlWrapper</spirit:name>
      <spirit:file>
        <spirit:name>data/i2c_memory/RTL/i2c_memory.vhd</spirit:name>
        <spirit:fileType>vhdlSource</spirit:fileType>
        <spirit:logicalName>i2c_memory_lib</spirit:logicalName>
      </spirit:file>
    </spirit:fileSet>
  </spirit:fileSets>
</spirit:component>
